<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.firebase.Noticias">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/Noticias"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/N1Titulo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="6dp" />

        <ImageView
            android:id="@+id/ImN1"
            android:layout_width="match_parent"
            android:layout_height="154dp"

            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="6dp" />

        <TextView
            android:id="@+id/N1Texto1"
            android:layout_width="match_parent"
            android:layout_height="303dp"
            android:lineSpacingExtra="0.5dp"
            android:text=""
            android:layout_marginBottom="10dp"
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="195dp" />
        <TextView
            android:id="@+id/N2Titulo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="6dp" />

        <ImageView
            android:id="@+id/ImN2"
            android:layout_width="match_parent"
            android:layout_height="154dp"

            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="6dp" />

        <TextView
            android:id="@+id/N2Texto2"
            android:layout_width="match_parent"
            android:layout_height="303dp"
            android:text=""
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="195dp" />
        <TextView
            android:id="@+id/N3Titulo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="6dp" />

        <ImageView
            android:id="@+id/ImN3"
            android:layout_width="match_parent"
            android:layout_height="154dp"
           />

        <TextView
            android:id="@+id/N3Texto3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            tools:layout_editor_absoluteX="24dp"
            tools:layout_editor_absoluteY="195dp" />
    </LinearLayout>
    </ScrollView>
</FrameLayout>
